@using Test.Web.Controllers
@{
    ViewData["Title"] = "Index";
}

<h1>Ornek Controller Index</h1>

<!--view model ile gönderiyorsan datanın tipini belirtmen gerekiyor.-->

@Model List<Product2>; <!--tipini belirttik.-->

@foreach(var item in Model)
    {
      <p>@item.Id - @item.Name</p>  
    }


    <span>@DateTime.Now.ToShortDateString()</span>

    <br/>

    @{
        var datetime = DateTime.Now.ToShortDateString();
        var message = "merhaba";

        //bu şekilde string bir ifade gösterebilirsin.
        @: bugünün tarihi : @datetime

        // yada 

        <text>bu şekilde de string ifadelerini yazabilirsin.</text>
        <span>mesaj : @message</span>
        
    }

    <!-- if kullanımı-->

    @if(1==1)
    {
        <p>doğru</p>
    }
    else
    {
        <p>yanlış</p>
    }

    <!--for kullanımı-->

    @for (int i = 0; i < 10; i++)
    {
        //datayı alabilmek için yine de @ işareti koyuyoruz.
        <p>@i</p>
    }

    <!--foreach kullanımı-->

    @foreach (var item in Enumerable.Range(1,10).ToList())
    {
        <p>@item</p>
    }


