
@{
    ViewData["Title"] = "Add";
}

<h1>Ürün Ekleme</h1>

<!--id için javascript tarafında yakalamak için name ile yapıyoruz backende yakalamak için-->
<form asp-controller="Products" asp-action="SaveProduct" method="post">
    <label>Ürün ismi</label>
    <input type="text" name="Name" />
    <br/>

    <label>Ürün Fiyatı</label>
    <input type="text" name="Price" />
    <br/>

    <label>Ürün Stoğu</label>
    <input type="text" name="Stock" />
    <br/>

    <label>Ürün Rengi</label>
    <input type="text" name="Color" />
    <br/>

    <button type="submit">Ürünü Kaydet</button>
</form>
